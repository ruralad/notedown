{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Notedown",
    "version": "0.8.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "fs": {
        "createDir": true,
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "exists": true,
        "renameFile": true,
        "removeFile": true,
        "scope": ["$DOCUMENT/Notedown", "$DOCUMENT/Notedown/**/*"]
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "setIgnoreCursorEvents": true,
        "setTitle": true,
        "setFullscreen": true
      },
      "clipboard": {
        "all": false,
        "readText": false,
        "writeText": true
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": false,
        "open": false,
        "save": true
      },
      "os": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.ruralad.notedown",
      "targets": ["app", "appimage", "deb", "dmg", "msi", "updater"]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/ruralad/notedown/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg4OTYxRUVCNkI3MTExRkIKUldUN0VYRnI2eDZXaUowZXpDNHk1N2dmMXJRbzRWUTZ6L1ZsT3JUZWRXQjdLVVI0NGZYalhEK1cK",
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "decorations": false,
        "fullscreen": false,
        "resizable": true,
        "title": "NoteDown",
        "width": 800,
        "height": 600
      }
    ]
  }
}
